<div class="question {{if isQuestionFinished 'question-answered'}}">
	<div class="question-images">
		<div class="question-image" title="{{question.questionImageRightsHolder}} ({{question.questionImageLicense}})">{{{question.questionImage}}}</div>
		{{#if incorrectOption}}
			<div class="question-incorrect-image">
				<span title="{{question.questionImageRightsHolder}} ({{question.questionImageLicense}})">{{{incorrectOption.image}}}</span>
			</div>
		{{/if}}
	</div>
	<div class="question-text-options">
		{{#each question.options as |option index|}}
			<span class="question-text-option" id="a-{{option.id_organism}}" {{action 'answer' option.id_organism}}>
				{{option.text}}
				<span class="show-hint" {{action "showHint" index}}></span>
				<span class="keyboard-shortcut"><span>{{increment index}}</span></span>
				<span class="dead-end"><span>&#x2715;</span></span>
				<span class="continue"><span>&rarr;</span></span>
			</span>
		{{/each}}
	</div>
	<div class="cleaner"></div>
</div>