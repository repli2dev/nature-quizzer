	<p>{{translate 'index.description2'}}</p>
	<p class="center"><img src="/images/demo.png" alt="" alt="{{translate 'index.demo'}}" /></p>

	<h2>{{translate 'index.how_it_works'}}</h2>

		<div class="adaptive">
			<h3>{{translate 'index.heading_adaptive'}}</h3>
			<p>{{translate 'index.text_adaptive'}}</p>
		</div>

		<div class="specialized-system">
			<h3>{{translate 'index.heading_specialized'}}</h3>
			<p>{{translate 'index.text_specialized'}}</p>
		</div>

		<div class="data-learning">
			<h3>{{translate 'index.heading_data'}}</h3>
			<p>{{translate 'index.text_data'}}</p>
		</div>
</div>