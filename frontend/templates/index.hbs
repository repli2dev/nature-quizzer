{{title 'menu.quick_options'}}

<div class="quick-choice">
	<h2>{{translate 'index.heading'}}</h2>
	<p>{{translate 'index.choose_topic'}}:</p>
	<div id="quick-buttons">
		{{#each model.concepts as |concept|}}
			{{#link-to 'play' concept.id_concept concept.code_name classNames="quick-button"}}<h3>{{concept.name}}</h3>{{/link-to}}
		{{/each}}
		<div class="cleaner" ></div>
	</div>
	<p>{{translate 'index.other_topics'}} {{! {{#link-to 'concepts'} }{{translate 'index.all_available'} }{{/link-to} } }}.</p>
</div>

<div class="narrow-column">
	<h2>{{translate 'index.what_is_it'}}</h2>
